<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ded.lyricsfinder">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".DataFinder"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Inventory">
        </activity>
        <activity android:name=".WipeData">
        </activity>
        <activity android:name=".BadConnection">
        </activity>
        <activity android:name=".LootInspector">
        </activity>
        <activity android:name=".SongGuesser">
        </activity>
        <activity android:name=".LyricsHolder">
        </activity>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyBQ75pXj9Cwp_U8UNYcAt40GZuteLOiUtA"/>

        <activity
                android:name=".GameMap"
                android:label="@string/title_activity_game_map"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Store"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Settings"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".GameModeSelection"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>