<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4b85d1</item>
        <item name="colorPrimaryDark">#4b85d1</item>
        <item name="colorAccent">#5a6266</item> //@color/colorAccent
    </style>

    <style name="SCBSwitch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#4b85d1</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#1054ad
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#1054ad
        </item>
    </style>

</resources>
