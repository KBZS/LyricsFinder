<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameModeSelection"
        android:background="@drawable/gamemodeselection">

    <TextView

            android:text="Select the game mode:"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/hammersmith_one"
            android:textSize="22sp" android:textColor="@color/primaryBlue" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.238"/>
    <Button
            android:text="Classic"
            android:layout_width="284dp"
            android:layout_height="67dp"
            android:id="@+id/classic_btn"
            android:fadingEdge="none"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button" android:textSize="25sp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.307" app:layout_constraintHorizontal_bias="0.54"/>
    <Button
            android:text="Current"
            android:layout_width="284dp"
            android:layout_height="67dp"
            android:id="@+id/current_btn"
            android:fadingEdge="none"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button" android:textSize="25sp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54" app:layout_constraintVertical_bias="0.47"/>
    <Button
            android:enabled="false"
            android:text="80's mix"
            android:layout_width="284dp"
            android:layout_height="67dp"
            android:id="@+id/eight_btn"
            android:fadingEdge="none"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button" android:textSize="25sp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.635" app:layout_constraintHorizontal_bias="0.54"/>
    <Button
            android:enabled="false"
            android:text="&quot;Running in the 90's&quot;"
            android:layout_width="284dp"
            android:layout_height="67dp"
            android:id="@+id/nine_btn"
            android:fadingEdge="none"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button" android:textSize="18sp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.79" app:layout_constraintHorizontal_bias="0.54"/>
    <Button
            android:enabled="false"
            android:text="Songs from movies"
            android:layout_width="284dp"
            android:layout_height="67dp"
            android:id="@+id/movies_btn"
            android:fadingEdge="none"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button" android:textSize="20sp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.945" app:layout_constraintHorizontal_bias="0.54"/>
    <ProgressBar
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/progressBar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintVertical_bias="0.04"
            style="?android:progressBarStyleHorizontal"
            android:progress="10"
            android:progressDrawable="@drawable/level_circle"/>
    <TextView
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/level_counter" android:text="10"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.855" app:layout_constraintVertical_bias="0.09"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
            android:textColor="@color/primaryBlue" android:textSize="30sp" android:textAlignment="center"
            android:fontFamily="@font/hammersmith_one"/>
    <TextView
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:id="@+id/lvlText" android:text="LVL"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.093"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
            android:textColor="@color/primaryBlue" android:textSize="24sp" android:textAlignment="center"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"/>
    <TextView
            android:text="Unlocks at level 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight_unlock"
            android:fontFamily="@font/hammersmith_one" android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.534"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.56" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Unlocks at level 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nine_unlock"
            android:fontFamily="@font/hammersmith_one" android:textSize="18sp" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.705"/>
    <TextView
            android:text="Unlocks at level 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movies_unlock"
            android:fontFamily="@font/hammersmith_one" android:textSize="18sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.523"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.893"/>
</androidx.constraintlayout.widget.ConstraintLayout>