<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SongGuesser">

    <Button
            android:text="Guess"
            android:layout_width="120dp"
            android:layout_height="54dp"
            android:id="@+id/guess_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.42"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
            android:fontFamily="@font/hammersmith_one" android:textSize="20sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
    <Button
            android:text="Give Up"
            android:layout_width="121dp"
            android:layout_height="54dp"
            android:id="@+id/give_up_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.514"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
            android:fontFamily="@font/hammersmith_one" android:textSize="20sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/author_in" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/name_in" android:fontFamily="@font/hammersmith_one"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.835"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_in" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guess_btn" android:fontFamily="@font/hammersmith_one"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Singer/Author:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_txt" android:textSize="16sp"
            android:fontFamily="@font/hammersmith_one" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/author_in" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.312"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_txt" android:textSize="16sp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.257"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/name_in"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>